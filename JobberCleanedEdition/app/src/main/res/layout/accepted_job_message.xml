<?xml version="1.0" encoding="utf-8"?>



    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="0dp"

    android:background="#252525"
    android:visibility="visible"
    >

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="40dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/white" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:backgroundTint="#1C1C1C"
        android:background="@color/black"
        android:layout_below="@+id/card"
        />
    <RelativeLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <RelativeLayout
            android:id="@+id/notExpandedLayout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/imageLayout"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_margin="0dp">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                     />

                <TextView
                    android:id="@+id/noPictureText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="C"
                    android:visibility="gone"

                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@+id/imageLayout"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:orientation="horizontal"
                    android:paddingTop="8dp">

                    <TextView
                        android:id="@+id/jobDescriptionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="Name Name"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <TextView

                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="3dp"
                    android:drawablePadding="4dp"
                    android:ellipsize="end"

                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="Työntekjiä, Nurmikonleikkuu"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="14sp"

                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="3dp">


                    <TextView
                        android:id="@+id/lastText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="15dp"
                        android:drawableEnd="@drawable/ic_baseline_circle_24"
                        android:drawableTint="#777777"
                        android:padding="0dp"
                        android:text=""
                        android:textColor="#777777"
                        android:ellipsize="end"
                        android:visibility="gone"
                        android:maxEms="9"
                        android:maxLines="1"
                        android:textSize="13.5sp" />

                    <TextView
                        android:id="@+id/lastTextTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="15dp"
                        android:layout_toRightOf="@+id/lastText"
                        android:padding="0dp"
                        android:text=""
                        android:ellipsize="end"

                        android:maxLines="1"
                        android:textColor="#777777"

                        android:textSize="13.5sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tilaText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="3dp"
                    android:text="Odottaa hyväksyntää"
                    android:textColor="#ED9231"
                    android:visibility="gone" />


            </LinearLayout>

            <TextView
                android:id="@+id/alertText"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginTop="30dp"
                android:layout_toLeftOf="@+id/showMoreButton"
                android:background="@drawable/borders4"
                android:gravity="center"
                android:text="Today!"
                android:textColor="#FFFFFF"
                android:paddingHorizontal="5dp"
                android:textSize="12sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/showMoreButton"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="17dp"
                android:rotation="270"
                android:src="@drawable/ic_baseline_arrow_back_ios_new_24" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/expandedLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notExpandedLayout"
            android:orientation="vertical"
            android:layout_marginStart="30dp"
            android:paddingStart="0dp"
            android:paddingBottom="10dp"
            android:visibility="gone"

            >


            <TextView
                android:id="@+id/distanceText"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:text="noin 2 kilometrin päässä"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                app:drawableStartCompat="@drawable/ic_baseline_location_on_24"
                app:drawableTint="@color/white" />

            <TextView
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:drawableStart="@drawable/ic_baseline_calendar_month_24"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                app:drawableTint="@color/white" />

            <TextView
                android:id="@+id/timeText"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:drawableStart="@drawable/ic_baseline_access_time_24"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                app:drawableTint="@color/white" />

        </LinearLayout>

    </RelativeLayout>

    </RelativeLayout>






</RelativeLayout>