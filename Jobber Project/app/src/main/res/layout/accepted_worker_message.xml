<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:visibility="visible"
    android:layout_marginVertical="5dp"
    >

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/white" />
    <RelativeLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                >


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="7dp"
                     />

                <TextView
                    android:id="@+id/noPictureText"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=""
                    android:textStyle="bold"

                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </RelativeLayout>


            <LinearLayout
                android:layout_marginStart="0dp"
                android:layout_width="match_parent"
                android:layout_marginTop="1dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:layout_marginEnd="5dp">

                    <TextView
                        android:id="@+id/workerName"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_height="wrap_content"
                        android:text="Name Name"
                        android:textColor="?android:textColorPrimary"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        />
                </LinearLayout>





                <TextView

                    android:gravity="center_vertical"
                    android:id="@+id/workerJobDescription"
                    android:layout_marginStart="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Työntekjiä, Nurmikonleikkuu"
                    android:textColor="?android:textColorPrimary"
                    android:layout_marginTop="3dp"
                    android:drawablePadding="4dp"
                    android:visibility="gone"
                    android:textSize="14sp"

                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp">


                    <TextView
                        android:id="@+id/lastText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="15dp"
                        android:drawableEnd="@drawable/ic_baseline_circle_24"
                        android:drawablePadding="10dp"
                        android:drawableTint="#AAAAAA"
                        android:ellipsize="end"
                        android:maxEms="9"
                        android:maxLines="1"
                        android:padding="0dp"
                        android:text=""
                        android:textColor="#AAAAAA"
                        android:visibility="gone"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/lastTextTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="15dp"
                        android:layout_toRightOf="@+id/lastText"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:padding="0dp"
                        android:text=""
                        android:textColor="#AAAAAA"

                        android:textSize="15sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tilaText"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Odottaa hyväksyntää"
                    android:layout_marginTop="0dp"
                    android:textColor="#ED9231"
                    android:layout_marginBottom="3dp"/>



            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>






</RelativeLayout>