<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.MainFragments.EmployerFragments.MyWorkPlacesFragment"
    android:background="?android:colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/myWorkPlaceRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:clipToPadding="false"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/noAdLayout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:fontFamily="@font/alata"
            android:text="You haven't applied for employer"
            android:textColor="?android:textColorPrimary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/applyHereButton"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/title"
            android:layout_marginHorizontal="80dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/borders5"
            android:fontFamily="@font/alata"
            android:gravity="center"
            android:text="Apply here"
            android:paddingBottom="3dp"
            android:textColor="?android:textColorPrimary"
            android:textSize="18sp" />
    </RelativeLayout>





</RelativeLayout>