<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.LoginFragments.ChooseRoleFragment"
    android:background="#000000">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/alata"
        android:text="What are you looking for?"
        android:textColor="@color/white"
        android:textSize="53sp" />

    <TextView
        android:id="@+id/subTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:text="You can change this later in your profile"
        android:textColor="@color/white" />

    <RelativeLayout
        android:id="@+id/employeeButton"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/subTitle"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/borders"

        >

        <TextView
            android:id="@+id/topText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borders"
            android:fontFamily="@font/alata"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:text="Find jobs near you"
            android:textColor="@color/white"

            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topText"
            android:gravity="center_horizontal"
            android:text="(Worker)"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/employerButton"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/employeeButton"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/borders"

        >

        <TextView
            android:id="@+id/topText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borders"
            android:fontFamily="@font/alata"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:text="Find people near you"
            android:textColor="@color/white"

            android:textSize="20sp" />
        <TextView
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topText2"
            android:text="(Employer)"
            android:textSize="16sp"
            android:textColor="@color/white"

            />


    </RelativeLayout>





</RelativeLayout>