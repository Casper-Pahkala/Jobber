<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="230dp">




    <com.google.android.material.card.MaterialCardView
    android:id="@+id/työpaikkaView"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="4dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginBottom="6dp"
    app:strokeColor="#AFAFAF"
    app:strokeWidth="1dp" android:backgroundTint="#000000"
    >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/työnkuvaText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/alata"
                android:text="Nurmikonleikkaaj"
                android:textColor="#FFFFFF"

                android:textSize="24sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:id="@+id/name"
                android:text=" Pekka Pouta"
                android:textColor="#FFFFFF"
                android:layout_marginTop="60dp"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:layout_marginStart="20dp"
                app:drawableStartCompat="@drawable/ic_baseline_person_outline_24"
                app:drawableTint="@color/white" />

            <TextView
                android:id="@+id/etäisyystext"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="90dp"
                android:gravity="center_vertical"
                android:text="noin 2 kilometrin päässä"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                app:drawableStartCompat="@drawable/ic_baseline_location_on_24"
                app:drawableTint="@color/white" />

            <TextView
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="120dp"
                android:drawableStart="@drawable/ic_baseline_calendar_month_24"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                app:drawableTint="@color/white" />
            <TextView
                android:id="@+id/timeText"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="150dp"
                android:drawableStart="@drawable/ic_baseline_access_time_24"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                app:drawableTint="@color/white" />
            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="180dp"
                android:gravity="center_vertical"
                android:text="Waiting for response"
                android:layout_toRightOf="@+id/statusImage"
                android:textColor="#8E8E8E"
                android:textSize="15sp"
                app:drawableTint="@color/white" />
            <ImageView
                android:id="@+id/statusImage"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/status_vector"
                android:layout_marginTop="180dp"
                app:tint="@color/white" />
        </RelativeLayout>








    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>