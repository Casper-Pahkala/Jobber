<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp">




    <com.google.android.material.card.MaterialCardView
    android:id="@+id/työpaikkaView"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="4dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginBottom="6dp"
    app:strokeColor="#AFAFAF"
    app:strokeWidth="1dp" android:backgroundTint="#000000"
    >


    <TextView
        android:id="@+id/työnkuvaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nurmikonleikkaaj"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/alata"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:id="@+id/name"
        android:text=" Pekka Pouta"
        android:textColor="#FFFFFF"
        android:layout_marginTop="60dp"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        app:drawableStartCompat="@drawable/ic_baseline_person_outline_24"
        app:drawableTint="@color/white" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:id="@+id/etäisyystext"
        android:text="noin 2 kilometrin päässä"
        android:textColor="#FFFFFF"
        android:layout_marginTop="90dp"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        app:drawableTint="@color/white"
        app:drawableStartCompat="@drawable/ic_baseline_location_on_24" />


    <RelativeLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:backgroundTint="#000000"
        android:background="@color/black"
        android:layout_height="45dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8E8E8E"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:id="@+id/middle"
            android:background="#8E8E8E"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/hyväksyButton"
            android:layout_width="match_parent"
            android:foreground="?android:attr/selectableItemBackground"

            android:layout_height="match_parent"
            android:layout_gravity="bottom|right"
            android:layout_toRightOf="@+id/middle"
            android:drawableEnd="@drawable/ic_baseline_check_24"
            android:fontFamily="@font/alata"
            android:gravity="center"
            android:paddingEnd="16dp"
            android:text="Hyväksy"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/kieltäydyButton"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/middle"
            android:fontFamily="@font/alata"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="Kieltäydy"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>